{
  "name": "faidaire-web",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "engines": {
    "node": "24.12.0"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "watch:prod": "webpack --mode production --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.+(ts|js|json|html|scss)\"",
    "format:check": "prettier --check \"src/**/*.+(ts|js|json|html|scss)\"",
    "format:backend-templates": "prettier --write ../backend/src/main/resources/templates",
    "e2e": "playwright test --ui",
    "e2e:headless": "playwright test",
    "start:e2e": "cd .. && java -jar backend/build/libs/faidare.jar --spring.profiles.active=e2e",
    "start:e2e:ci": "cd .. && java -jar backend/build/libs/faidare.jar --spring.profiles.active=e2e,ci",
    "e2e:standalone": "start-server-and-test 'pnpm start:e2e' http-get://localhost:8381/faidare-dev 'pnpm e2e:headless'",
    "e2e:standalone:ci": "start-server-and-test 'pnpm start:e2e:ci' http-get://localhost:8381/faidare-dev 'pnpm e2e:headless'",
    "postinstall": "playwright install"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/leaflet": "1.9.21",
    "bootstrap": "5.3.8",
    "leaflet": "1.9.4"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@types/bootstrap": "5.2.10",
    "@types/leaflet.markercluster": "1.5.6",
    "autoprefixer": "10.4.23",
    "baseline-browser-mapping": "2.9.19",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.4",
    "leaflet.markercluster": "1.5.3",
    "mini-css-extract-plugin": "2.9.4",
    "postcss": "8.5.6",
    "postcss-loader": "8.2.0",
    "prettier": "3.7.4",
    "sass": "1.96.0",
    "sass-loader": "16.0.6",
    "start-server-and-test": "2.1.2",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "webpack": "5.103.0",
    "webpack-cli": "6.0.1"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
