{
	"index" : {
		"max_inner_result_window": 10000
	},
	"analysis": {
		"filter": {
			"1-20-edgeNGram": {
				"type": "edge_ngram",
				"side": "front",
				"min_gram": 1,
				"max_gram": 20
			}
		},
		"tokenizer": {
			"special_tokenizer": {
				"type": "pattern",
				"pattern": "\\s|,|-|\\(|\\)|\\[|\\]|\\{|\\}|_"
			}
		},
		"analyzer": {
			"search_suggester": {
				"type": "custom",
				"tokenizer": "special_tokenizer",
				"filter": [
					"lowercase",
					"asciifolding"
				]
			},
			"index_suggester": {
				"type": "custom",
				"tokenizer": "special_tokenizer",
				"filter": [
					"lowercase",
					"asciifolding",
					"1-20-edgeNGram"
				]
			}
		}
	}
}
